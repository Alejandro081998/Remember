<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_detalle_item"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    android:background="@color/colorCelesteC"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_nombre"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_height="wrap_content" />


    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgFotoDet"
        android:layout_gravity="center"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        />




    <TextView
        android:id="@+id/txt_rol"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_desde"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/switch_vinculacion"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/vinculacion" />

    <Switch
        android:id="@+id/switch_bloqueado"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/bloqueado" />


</LinearLayout>