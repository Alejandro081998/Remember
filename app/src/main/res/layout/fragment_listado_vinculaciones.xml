<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCelesteC"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20sp"
        android:src="@drawable/enlace" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:text="@string/Familiar"
                    android:textColor="@color/colorAmarilloB"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_agregar_familiar_vincu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/addx32" />

            </LinearLayout>

        <TextView
            android:id="@+id/no_hay_familiares_vincu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:textStyle="italic"
            android:textSize="16dp"
            android:text="@string/no_hay_vinculaciones"
            />


        <ListView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center"
            android:id="@+id/list_vincu_familiares"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="12dp"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:scrollbarStyle="outsideOverlay" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:text="@string/Profesional"
                    android:textColor="@color/colorRojo"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_agregar_medico_vincu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="60dp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/addx32" />

            </LinearLayout>

        <TextView
            android:id="@+id/no_hay_profesionales_vincu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:textStyle="italic"
            android:textSize="16dp"
            android:text="@string/no_hay_vinculaciones"
            />

        <ListView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center"
            android:id="@+id/list_vincu_medicos"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="12dp"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:scrollbarStyle="outsideOverlay" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>