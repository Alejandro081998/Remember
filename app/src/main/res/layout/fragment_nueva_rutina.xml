<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCelesteC"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgRutinas"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="130dp"
                app:srcCompat="@mipmap/rutinas" />

            <!--<Button
                android:id="@+id/button5"
                android:layout_width="148dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/boton_rojo"
                android:text="Eliminar Rutina"
                android:textSize="12sp"
                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_rut"
                android:layout_gravity="center"
                android:textColor="@color/colorBlanco"
                android:textSize="20sp"
                android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/marco_redondo">

            <Spinner
                android:id="@+id/tipos_rutina"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:popupBackground="@color/colorCelesteC"
                android:spinnerMode="dropdown"
                android:layout_marginTop="10dp"
                android:layout_height="25dp"/>

        </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/Titulo"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorBlanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_titulo_rutina"
                android:layout_width="304dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/marco_celeste_foto"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_gravity="center"
                android:hint="@string/txTitulo"
                android:textAlignment="center"
                android:textColor="@color/colorCelesteD"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/Horario"
                android:textColor="@color/colorBlanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TimePicker
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"></TimePicker>


            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:text="@string/Dias"
                android:textColor="@color/colorBlanco"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/marco_celeste_foto">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp">

                        <CheckBox
                            android:id="@+id/chkLunes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="40sp"
                            android:text="@string/Lunes"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/chkViernes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Viernes"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/chkMartes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="40sp"
                            android:text="@string/Martes"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/chkSabado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Sabado"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/chkMiercoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="40sp"
                            android:text="@string/Miercoles"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/chkDomingo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Domingo"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp">

                        <CheckBox
                            android:id="@+id/chkJueves"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40sp"
                            android:layout_marginRight="40sp"
                            android:text="@string/Jueves"
                            android:textColor="@color/colorCelesteD"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </TableRow>
                </TableLayout>

            </RadioGroup>

                <Button
                    android:id="@+id/btn_guardar_rutina"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/boton_verde"
                    android:text="Guardar" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>