<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marco_celeste_foto"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_nombre_nuevo_vinculado"
        android:layout_width="220dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/es_medico"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/doctor"/>

        <ImageView
            android:id="@+id/es_familiar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/familia"/>

        <ImageView
            android:id="@+id/es_paciente"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/paciente"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_usuario_vinculado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/txt_id_usuario_vinculado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="20sp" />



</LinearLayout>