<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marco_celeste_foto"
    android:id="@+id/marco_vinculacion"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/txt_nombre_apellido"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/es_medico_animacion"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/doctor"/>

    <ImageView
        android:id="@+id/es_paciente_animacion"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/paciente"/>

    <ImageView
        android:id="@+id/es_familiar_animacion"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/familia"/>

    <TextView
        android:id="@+id/txt_id_vinculacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_idusuario_vinculacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_rol_vinculacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:textStyle="italic" />



</LinearLayout>